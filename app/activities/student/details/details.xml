<Page class="page" actionBarHidden="true" loaded="onPageLoaded">
    <ActionBar></ActionBar>
    <DockLayout>
        <StackLayout id="actionbar" dock="top">
            <FlexboxLayout tap="exit" orientation="horizontal" alignItems="center">
                <Image src="~/icons/arrow-left.png" />
                <Label text="Konsultacja" />
            </FlexboxLayout>
        </StackLayout>

        <ScrollView dock="top" orientation="vertical" height="80%">
            <StackLayout>
                <StackLayout class="labelGroup">
                    <Label text="Prowadzący: " />
                    <Label class="info" text="{{ consultation.teacher }}" />
                </StackLayout>
                <StackLayout class="labelGroup">
                    <Label text="Godzina: " />
                    <Label class="info" text="{{ consultation.timeStr }}" />
                </StackLayout>
                <StackLayout class="labelGroup">
                        <Label text="Pokój: " />
                        <Label class="info" text="{{ consultation.room }}" />
                </StackLayout>
                <StackLayout class="labelGroup">
                    <Label text="Zapisano dnia: " />
                    <Label class="info" text="{{ consultation.dateStr }}" />
                </StackLayout>
                <StackLayout class="labelGroup">
                    <Label text="Status: " />
                    <!--Tutaj później można zrobić różne kolory w zależności od stanu-->
                    <Label class="info" text="{{ consultation.state }}" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
        <Button class="signOutButton" tap="deleteConsultation" text="Wypisz się z Konsultacji"/>
    </DockLayout>
</Page>