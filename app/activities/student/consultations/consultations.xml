<Page class="page" actionBarHidden="true" loaded="onPageLoaded">
    <ActionBar></ActionBar>

    <StackLayout>
        <StackLayout id="actionbar">
            <FlexboxLayout orientation="horizontal" alignItems="center">
                <Image tap="exit" src="~/icons/arrow-left.png" dock="left"/>
                <Label text="Moje konsultacje" dock="left"/>
            </FlexboxLayout>
        </StackLayout>

        <StackLayout>
            <ListView items="{{ consultations }}">
                <ListView.itemTemplate>
                        <StackLayout>
                                <Label text="{{ date }}"/>
                                        <ListView items="{{ cons }}" height="100">
                                        <ListView.itemTemplate> 
                                                        <DockLayout>
                                                                <Label text="{{ timeStr }}" dock="right"/>
                                                                <Label text="{{ teacher }}" dock="left"/>
                                                        </DockLayout>
                                                </ListView.itemTemplate>
                                        </ListView>
                        </StackLayout>
                </ListView.itemTemplate>
            </ListView>
        </StackLayout>
    </StackLayout>
</Page>