<Page class="page" actionBarHidden="true" loaded="onPageLoaded">
    <ActionBar></ActionBar>

    <StackLayout>
            <DockLayout id="topBarBase" stretchLastChild="false">
                    <!-- TODO change image to back icon-->
                    <Image tap="backToCockpit" src="~/images/gray.png" dock="right" />
                    <Image src="~/icons/bell.png" dock="right" />
                    <Label text="Konsultacje" dock="left" />
            </DockLayout>
            <ListView items="{{ consultations }}">
                <ListView.itemTemplate>
                        <StackLayout>
                                <DockLayout>
                                        <Label text="{{ timeStr }}" dock="right"/>
                                        <Label text="{{ teacher }}" dock="left"/>
                                </DockLayout>
                        </StackLayout>
                </ListView.itemTemplate>
            </ListView>
    </StackLayout>
</Page>