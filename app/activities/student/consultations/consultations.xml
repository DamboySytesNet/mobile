<Page class="page" actionBarHidden="true" loaded="onPageLoaded">
    <ActionBar></ActionBar>

    <StackLayout>
            <DockLayout id="actionbar" stretchLastChild="false">
            <!--TODO chenge exit icon to left-arrow icon-->
                    <Image tap="backToCockpit" src="~/icons/exit.png" dock="left" />
                    <Label text="Konsultacje" dock="left" />
            </DockLayout>
        <StackLayout>
            <ListView items="{{ consultations }}">
                <ListView.itemTemplate>
                        <StackLayout>
                                <Label text="{{ date }}"/>
                                        <ListView items="{{ cons }}" height="100">
                                        <ListView.itemTemplate> 
                                                        <DockLayout>
                                                                <Label text="{{ timeStr }}" dock="right"/>
                                                                <Label text="{{ teacher }}" dock="left"/>
                                                        </DockLayout>
                                                </ListView.itemTemplate>
                                        </ListView>
                        </StackLayout>
                </ListView.itemTemplate>
            </ListView>
        </StackLayout>
    </StackLayout>
</Page>