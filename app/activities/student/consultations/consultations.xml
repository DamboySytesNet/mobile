<Page class="page" actionBarHidden="true" loaded="onPageLoaded">
    <ActionBar></ActionBar>

    <StackLayout>
        <StackLayout id="actionbar">
            <FlexboxLayout tap="exit" orientation="horizontal" alignItems="center">
                    <Image src="~/icons/arrow-left.png" dock="left"/>
                    <Label text="Konsultacje" dock="left"/>
            </FlexboxLayout>
        </StackLayout>

        <StackLayout>
            <ListView items="{{ consultations }}">
                <ListView.itemTemplate>
                    <StackLayout>
                        <Label text="{{ dateStr }}"/>
                        
                        <ListView items="{{ cons }}" height="100">
                            <ListView.itemTemplate> 
                                <DockLayout index="{{ id }}" tap="goToDetails">
                                    <Label text="{{ timeStr }}" dock="right"/>
                                    <Label text="{{ teacher }}" dock="left"/>
                                </DockLayout>
                            </ListView.itemTemplate>
                        </ListView>
                    </StackLayout>
                </ListView.itemTemplate>
            </ListView>
        </StackLayout>
    </StackLayout>
</Page>