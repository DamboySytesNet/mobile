<Page class="page" actionBarHidden="true" loaded="pageLoaded">
    <ActionBar></ActionBar>
    <StackLayout flexDirection="column" id="bg">
        <StackLayout id="actionbar">
            <FlexboxLayout tap="back" orientation="horizontal" alignItems="center">
                <Image src="~/icons/arrow-left.png" />
                <Label text="Rejestracja" />
            </FlexboxLayout>
        </StackLayout>
        <FlexboxLayout flexDirection="column"
                        alignItems="center"
                        justifyContent="" id="content">
        
            <StackLayout class="labelGroup">
                <!-- <Label class="title" text="Imie" /> -->
                <TextField id="name" class="input" hint="Imie" text="{{ name }}"></TextField>
            </StackLayout>
            <StackLayout class="labelGroup">
                <!-- <Label class="title" text="Nazwisko" /> -->
                <TextField id="surname" class="input" hint="Nazwisko" text="{{ surname }}"></TextField>
            </StackLayout>
            <StackLayout class="labelGroup">
                <!-- <Label class="title" text="Email" /> -->
                <TextField id="email" class="input" hint="Email" keyboardType="email" text="{{ email }}"></TextField>
            </StackLayout>
            <StackLayout class="labelGroup">
                <!-- <Label class="title" text="Hasło" /> -->
                <TextField id="password" class="input" class="input"
                            text="{{ password }}"
                            hint="Hasło"
                            secure="true"></TextField>
            </StackLayout>
            <StackLayout class="labelGroup">
                <!-- <Label class="title" text="Hasło" /> -->
                <TextField id="repeatedPassword" class="input" class="input"
                            text="{{ repeatedPassword }}"
                            hint="Powtórzone hasło"
                            secure="true"></TextField>
                
            </StackLayout>
        <Button class="registerButton" tap="register" text="Zarejestruj się"/>
        </FlexboxLayout>
    </StackLayout>
</Page>