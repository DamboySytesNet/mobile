<Page class="page" actionBarHidden="true" loaded="pageLoaded">
    <ActionBar></ActionBar>

    <StackLayout>
        <DockLayout id="actionbar" stretchLastChild="false">
            <StackLayout tap="exit" orientation="horizontal">
                <Image src="~/icons/arrow-left.png" dock="left"/>
                <Label text="Powrót" dock="left"/>
            </StackLayout>
        </DockLayout>

        <StackLayout id="profileImage">
            <Image src="~/images/male.png" />
            <Label text="{{ user }}" />
        </StackLayout>

        <FlexboxLayout id="main" flexDirection="column">
            <StackLayout id="main-defaultRoom" orientation="horizontal">
                <Label text="Domyślny pokój: " />
                <TextField hint="Domyślny pokój"
                           text="{{ room }}"
                           autocorrect="false"/>
            </StackLayout>

            <ScrollView>
                <ListView id="main-list" items="{{ myHours }}">
                    <ListView.itemTemplate>
                        <StackLayout id="main-hours">
                            <DockLayout class="main-hour-post" orientation="horizontal" stretchLastChild="false">
                                <StackLayout class="main-hour-post-actions" dock="right" orientation="horizontal">
                                    <Image tap="{{ edit }}" id="main-hour-post-edit" src="~/icons/pencil.png" />
                                    <Image tap="{{ remove }}" src="~/icons/delete.png" />
                                </StackLayout>
                                <StackLayout class="main-hour-post-date" orientation="horizontal" dock="top">
                                    <Label text="{{ from }}" />
                                    <Label text=" - " />
                                    <Label text="{{ to }} " />
                                    <Label text="{{ day }} " />
                                </StackLayout>
                                <StackLayout class="main-hour-post-room" orientation="horizontal" dock="bottom">
                                    <Label text="Pokój: " />
                                    <Label text="{{ room }}" />
                                </StackLayout>
                            </DockLayout>
                        </StackLayout>
                    </ListView.itemTemplate>
                </ListView>
            </ScrollView>

        </FlexboxLayout>
        
    </StackLayout>
</Page> 